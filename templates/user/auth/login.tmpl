{{template "base/head" .}}
<head>
  <meta charset="utf-8">
  <meta http-equiv="x-ua-compatible" content="ie=edge">
  <title>Uport Dapp Tutorial</title>
  <meta name="description" content="">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <script type="text/javascript" src="{{AppSubURL}}/js/uport-connect/web3.js"></script>
  <script type="text/javascript" src="{{AppSubURL}}/js/uport-connect/uport-connect.js"></script>
</head>

<div class="user signin">
  <div class="ui middle very relaxed page grid">
    <div class="column">
      <form class="ui form" action="{{.Link}}" method="post">
        {{.CSRFTokenHTML}}
        <h3 class="ui top attached header">
          {{.i18n.Tr "sign_in"}}
        </h3>
        <div class="ui attached segment">
          {{template "base/alert" .}}
          <div class="required inline field {{if .Err_UportId}}error{{end}}">
            <label for="uport_id">{{.i18n.Tr "uportid"}}</label>
            <input id="uport_id" name="uport_id" value="{{.uport_id}}" autofocus required>
          </div>
          <div class="inline field">
            <label></label>
            <div class="ui checkbox">
              <label>{{.i18n.Tr "auth.remember_me"}}</label>
              <input name="remember" type="checkbox">
            </div>
          </div>

          <div class="inline field">
            <label></label>
            <button class="ui green button">{{.i18n.Tr "sign_in"}}</button>
            <a href="{{AppSubURL}}/user/forget_password">{{.i18n.Tr "auth.forget_password"}}</a>
          </div>
          {{if .ShowRegistrationButton}}
            <div class="inline field">
              <label></label>
              <a href="{{AppSubURL}}/user/sign_up">{{.i18n.Tr "auth.sign_up_now" | Str2html}}</a>
            </div>
          {{end}}
        </div>
      </form>
      <div class="ui form">
        <div class="inline field">
          <label></label>
          <button class="ui green button"  id="connectUportBtn" onclick="uportConnect()">Connect uPort</button>
        </div>
      </div>
    </div>
  </div>
</div>

<body>
  <script>
    const $ = (selector) => document.querySelector(selector)
    let globalState = {
      uportId: "",
      ethAddress: "",
      ethBalance: "",
      currentStatus: "",
      statusInput: "",
      txHashSentEth: "",
      txHashSetStatus: "",
      sendToAddr: "",
      sendToVal: ""
    }
    const render = function () {
      $('#uport_id').value = globalState.uportId;
    }
  </script>
  <script type="text/javascript" src="{{AppSubURL}}/js/uport_tutorial.js"></script>
</body>

{{template "base/footer" .}}
